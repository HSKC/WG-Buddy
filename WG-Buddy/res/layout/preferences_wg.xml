<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_wgidentificationtext" />

    <EditText
        android:id="@+id/wgnameedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/preferences_wgidentificationtext" />

    <TextView
        android:id="@+id/wgpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_wgpassword" />

    <EditText
        android:id="@+id/wgpasswordedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/preferences_wgpassword"
        android:inputType="textPassword" >

        <requestFocus android:layout_width="match_parent" />

    </EditText>

    <Button
        android:id="@+id/wgconnectbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_connect" />

    <Button
        android:id="@+id/wgcreatebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_createNewWG" />

</LinearLayout>