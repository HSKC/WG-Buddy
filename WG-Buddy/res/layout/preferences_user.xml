<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/userpref_nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_username" />

    <EditText
        android:id="@+id/userpref_nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:inputType="textNoSuggestions"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/userpref_passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_password" />

    <EditText
        android:id="@+id/userpref_passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/userpref_saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_login" />

    <Button
        android:id="@+id/userpref_createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_createuser" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createuser_lostpwd" />

</LinearLayout>