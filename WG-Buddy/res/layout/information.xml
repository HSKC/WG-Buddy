<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
        android:text="@string/information_wgName"
        android:textSize="18dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/information_wgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray" />
    
    
    <TextView 
        android:text="@string/information_wgAdmin"
        android:textSize="18dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/information_wgAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    
     <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray" />
    
    
    <TextView 
        android:text="@string/information_wgPassword"
        android:textSize="18dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/information_wgPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray" />
    
    
    <TextView 
        android:text="@string/information_wgUser"
        android:textSize="18dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip" />
    
    <ListView
        android:id="@+id/information_wg_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"
        android:orientation="vertical" >
        
    </ListView>

</LinearLayout>