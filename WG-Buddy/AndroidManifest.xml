<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.htwg.lpn.wgbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Only this application can receive the messages and registration result -->
    
    <permission android:name="de.htwg.lpn.wgbuddy.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    
   	<uses-permission android:name="de.htwg.lpn.wgbuddy.permission.C2D_MESSAGE" />

   	<!-- This app has permission to register and receive message -->
   	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

	<!-- Send the registration id to the server -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.GET_TASKS"/>
    
    
    
    <application        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:name=".Store" >
        <activity
            android:name=".WGBuddyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>        
        
        <activity android:name=".Login_WG"></activity>
        <activity android:name=".Login_User"></activity>
        
        <activity android:name=".Create_User"></activity>
        <activity android:name=".Create_WG"></activity>
        
        <activity android:name=".Create_ShoppingItem"></activity>
        <activity android:name=".Create_Message"></activity>
        <activity android:name=".Create_Task"></activity>
        
        <activity android:name=".Preferences"></activity>
        
        <activity android:name=".Information"></activity>
        
        <activity android:name=".TaskDistributor"></activity>
        <activity android:name=".Taskdistributor_Info"></activity>       
        
        
        
        <activity android:name=".ShoppingList"></activity>
        <activity android:name="Messenger"></activity>        
        <activity android:name="UserTaskList"></activity>
        <activity android:name="UserTaskCompleteEntry"></activity>

        
        <activity android:name="Messenger"></activity>

        <receiver android:name=".utility.C2dmReceiver" android:permission="com.google.android.c2dm.permission.SEND">
			<intent-filter>
       			<action android:name="com.google.android.c2dm.intent.RECEIVE" />
      			<category android:name="de.htwg.lpn.wgbuddy" />
         	</intent-filter>
          	<intent-filter>
              	<action android:name="com.google.android.c2dm.intent.REGISTRATION" />
              	<category android:name="de.htwg.lpn.wgbuddy" />
          	</intent-filter>
      	</receiver>
      	
    </application>
    
    
</manifest>
